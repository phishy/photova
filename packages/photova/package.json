{
  "name": "brighten",
  "version": "0.1.0",
  "description": "A powerful, extensible photo editor SDK for the web",
  "main": "dist/brighten.cjs.js",
  "module": "dist/brighten.esm.js",
  "browser": "dist/brighten.umd.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/brighten.esm.js",
      "require": "./dist/brighten.cjs.js",
      "types": "./dist/index.d.ts"
    },
    "./ui": {
      "import": "./dist/ui/brighten-ui.esm.js",
      "require": "./dist/ui/brighten-ui.cjs.js",
      "types": "./dist/ui/index.d.ts"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "dev": "vite",
    "build": "npm run build:lib && npm run build:types",
    "build:lib": "vite build --mode lib",
    "build:types": "tsc --emitDeclarationOnly --declaration --outDir dist",
    "build:pages": "vite build",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src --ext .ts,.js",
    "format": "prettier --write src/**/*.{ts,js}",
    "docs": "typedoc",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "photo-editor",
    "image-editor",
    "canvas",
    "filters",
    "crop",
    "rotate",
    "transform",
    "sdk",
    "photo-editing",
    "image-manipulation"
  ],
  "author": "",
  "license": "BUSL-1.1",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "eslint": "^8.55.0",
    "jsdom": "^24.0.0",
    "prettier": "^3.1.0",
    "typedoc": "^0.28.15",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "vite-plugin-dts": "^3.6.0",
    "vitest": "^1.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
